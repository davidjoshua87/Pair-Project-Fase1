<html>
  <head>

    <link rel="stylesheet" href="./static/css/main.css">

    <h1>All Books</h1>



  </head>

  <style>

  #seller {
    font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 100%;
  }

  #seller td, #seller th {
    border: 1px solid #ddd;
    padding: 8px;
  }

  #seller tr:nth-child(even){background-color: #f2f2f2;}

  #seller tr:hover {background-color: #ddd;}

  #seller th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: left;
    background-color: #4CAF50;
    color: white;
  }

  h1{
     text-align: center;
  }

  h3{
     text-align: center;
  }

  table {
      border-collapse: collapse;
      width: 100%;
  }

  th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
  }
</style>

  <body>

    <a href="/addbook"> Add Book </a>
    <br><br>

    <table id="seller">

      <tr>

        <td><b>Title</b></td>
        <td><b>Stock</b></td>
        <td><b>Price</b></td>
        <td><b>Options</b></td>

      </tr>

      <% for (let i = 0; i < books_data.length; i++) { %>
           <td><%= books_data[i].title %></td>
           <td><%= books_data[i].stock %></td>
           <td><%= books_data[i].price %></td>
           <td><a href= '/seller/edit/<%= books_data[i].id%>'>Edit</a> | <a href= '/seller/delete/<%= books_data[i].id%>'>Delete</a></td></tr>
       <% } %>

    </table>

  </body>

</html>
